<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactsFragment"
    android:padding="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="@string/contacts_text"
        android:id="@+id/text_contacts"
        android:layout_centerHorizontal="true"
        android:textColor="#09C6DF"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/contact_1_card"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_below="@+id/text_contacts"
        android:layout_marginTop="30dp"
        android:elevation="50dp"
        android:backgroundTint="#09C6DF"
        app:cardCornerRadius="20dp"
        android:clickable="true"
        android:foreground="@drawable/ripple_effect">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/contact_card_1_layout">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="84dp"
                android:layout_height="77dp"
                android:layout_marginEnd="251dp"
                android:src="@drawable/profile_pic"
                app:layout_constraintBottom_toBottomOf="@+id/contact_1_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.081"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/contact_1_name"
                android:textColor="#fff"
                android:layout_width="283dp"
                android:layout_height="39dp"
                android:layout_marginBottom="78dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/contact_card_1_layout"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Bikki Bhushan"
                android:textSize="30dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/contact_1_number"
                android:layout_width="283dp"
                android:layout_height="39dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/contact_card_1_layout"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent"
                android:text="+917519159487"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#fff"/>


            <TextView
                android:id="@+id/contact_1_email_id"
                android:layout_width="368dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="bikkibhushan1@gmail.com"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@id/contact_1_number"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView

        android:id="@+id/contact_2_card"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:clickable="true"
        android:foreground="@drawable/ripple_effect"



        android:elevation="50dp"
        android:backgroundTint="#09C6DF"
        app:cardCornerRadius="20dp"
        android:layout_below="@+id/contact_1_card"
        android:layout_marginVertical="05dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/contact_card_2_layout">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="84dp"
                android:layout_height="77dp"
                android:layout_marginEnd="251dp"
                android:src="@drawable/profile_pic"
                app:layout_constraintBottom_toBottomOf="@+id/contact_2_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.081"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/contact_2_name"
                android:layout_width="283dp"
                android:layout_height="39dp"
                android:layout_marginBottom="78dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/contact_card_2_layout"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Sumit Verma"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#fff"/>


            <TextView
                android:id="@+id/contact_2_number"
                android:layout_width="283dp"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="+919772621183"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/contact_card_2_layout"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.487"
                android:textColor="#fff"/>


            <TextView
                android:id="@+id/contact_2_email_id"
                android:layout_width="368dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="sumitverma71197@gmail.com"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@id/contact_2_number"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/contact_3_card"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:clickable="true"
        android:foreground="@drawable/ripple_effect"

        android:elevation="50dp"
        android:backgroundTint="#09C6DF"
        app:cardCornerRadius="20dp"
        android:layout_below="@+id/contact_2_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/contact_card_3_layout">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="84dp"
                android:layout_height="77dp"
                android:layout_marginEnd="251dp"
                android:src="@drawable/profile_pic"
                app:layout_constraintBottom_toBottomOf="@+id/contact_3_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.081"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/contact_3_name"
                android:layout_width="283dp"
                android:layout_height="39dp"
                android:layout_marginBottom="78dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/contact_card_3_layout"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Bikki Bhushan"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#fff"/>


            <TextView
                android:id="@+id/contact_3_number"
                android:layout_width="283dp"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="+917519159487"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/contact_card_3_layout"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.487"
                android:textColor="#fff"/>


            <TextView
                android:id="@+id/contact_3_email_id"
                android:layout_width="368dp"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="bikkibhushan1@gmail.com"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@id/contact_3_number"
                app:layout_constraintVertical_bias="0.0"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>

</RelativeLayout>